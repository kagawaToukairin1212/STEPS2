<div class="container">
    <!-- シートタイトル -->
    <h2><%= @sheet.title %></h2>

    <!-- 棒グラフ -->
    <div class="row">
        <div class="col-12">
            <%= line_chart radar_chart_data_with_history(@sheet), max: 10, height: "400px" %>
        </div>
    </div>


    <div data-controller="hello">
        <input data-hello-target="name" type="text">
        <button data-action="click->hello#greet">Greet</button>
        <p data-hello-target="output"></p>
    </div>


    <!-- レーダーグラフと目標の表示 -->
    <div class="row mt-4">
        <!-- レーダーグラフ -->
        <div class="col-md-6">
            <canvas id="radarChart" data-controller="radar-graph"
                data-radar-graph-scores="<%= @scores.to_json %>"
                data-radar-graph-labels="<%= @labels.to_json %>"
                data-radar-graph-colors="<%= @colors.to_json %>">
            </canvas>
        </div>

        <!-- 目標リスト -->
        <div class="col-md-6">
            <h3>目標</h3>
            <% @sheet.goals.each do |goal| %>
                <p><strong><%= goal.evaluation_department.name %>:</strong> <%= goal.value %></p>
            <% end %>
        </div>
    </div>
</div>