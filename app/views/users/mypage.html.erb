<div class="container my-5">
  <h1 class="text-center mb-4"><%= t("users.mypage.title") %></h1>

  <div class="d-grid gap-2">
    <%= link_to t("users.mypage.add_sheet"), new_sheet_path, class: "btn btn-primary" %>
  </div>

  <div class="accordion mt-4" id="sheetsAccordion">
    <% @sheets.each_with_index do |sheet, index| %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= index %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
            <%= sheet.title %>
          </button>
        </h2>
        <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#sheetsAccordion">
          <div class="accordion-body">
            <div class="d-grid gap-2">
              <%= link_to t("users.mypage.enter_results", title: sheet.title), sheet_evaluation_scores_path(sheet), class: "btn btn-outline-primary" %>
              <%= link_to t("users.mypage.view_progress", title: sheet.title), sheet_path(sheet), class: "btn btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- <%= debug @radar_chart_data %> -->
</div>
